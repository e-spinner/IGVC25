<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot_name">

  <!-- ===== Arguments ===== -->
  <xacro:arg name="chassis_length" default="3.0"/>
  <xacro:arg name="chassis_width" default="2.0"/>
  <xacro:arg name="chassis_height" default="1.0"/>
  <xacro:arg name="chassis_mass" default="25.0"/>
  <xacro:arg name="chassis_offset" default="-1.25 0.0 0.5"/>

  <xacro:arg name="wheel_length" default="0.25"/>
  <xacro:arg name="wheel_radius" default="0.5"/>
  <xacro:arg name="wheel_mass" default="1.0"/>
  <xacro:arg name="track_width" default="2.25"/>
  <xacro:arg name="wheel_base" default="2.5"/>

  <xacro:arg name="max_steering_angle" default="0.60"/>
  <xacro:arg name="max_steering_angular_velocity" default="1.57"/>
  <xacro:arg name="max_steering_effort" default="1.0"/>
  <xacro:arg name="max_velocity" default="1.0"/>
  <xacro:arg name="max_effort" default="10.0"/>

  <!-- ===== Properties ===== -->
  <xacro:property name="chassis_length" value="$(arg chassis_length)"/>
  <xacro:property name="chassis_width" value="$(arg chassis_width)"/>
  <xacro:property name="chassis_height" value="$(arg chassis_height)"/>
  <xacro:property name="chassis_mass" value="$(arg chassis_mass)"/>
  <xacro:property name="chassis_offset" value="$(arg chassis_offset)"/>

  <xacro:property name="wheel_length" value="$(arg wheel_length)"/>
  <xacro:property name="wheel_radius" value="$(arg wheel_radius)"/>
  <xacro:property name="wheel_mass" value="$(arg wheel_mass)"/>
  <xacro:property name="track_width" value="$(arg track_width)"/>
  <xacro:property name="wheel_base" value="$(arg wheel_base)"/>

  <xacro:property name="max_steering_angle" value="$(arg max_steering_angle)"/>
  <xacro:property name="max_steering_angle_v" value="$(arg max_steering_angular_velocity)"/>
  <xacro:property name="max_steering_effort" value="$(arg max_steering_effort)"/>
  <xacro:property name="max_velocity" value="$(arg max_velocity)"/>
  <xacro:property name="max_effort" value="$(arg max_effort)"/>

  <!-- ===== Derived Properties ===== -->
  <xacro:property name="max_wheel_angular_velocity" value="${max_velocity / wheel_radius}"/>

  <!-- ===== Macros ===== -->
  <xacro:include filename="macros/materials.xacro"/>
  <xacro:include filename="macros/inertials.xacro"/>
  <xacro:include filename="macros/components.xacro"/>

  <!-- ===== ORIGIN ===== -->
  <link name="base_link"/>

  <!-- projection of base_link onto map frame -->
  <!-- <link name="base_footprint"/> -->


  <!-- ===== CHASSIS ===== -->
  <link name="chassis_link">
    <xacro:inertial_box mass="${chassis_mass}" x="${chassis_length}" y="${chassis_width}" z="${chassis_height}">
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </xacro:inertial_box>

    <visual>
      <geometry>
        <box size="${chassis_length} ${chassis_width} ${chassis_height}"/>
      </geometry>
      <material name="white"/>
    </visual>

    <collision>
      <geometry>
        <box size="${chassis_length} ${chassis_width} ${chassis_height}"/>
      </geometry>
    </collision>
  </link>

  <joint name="chassis_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis_link"/>
    <origin xyz="${chassis_offset}"/>
  </joint>

  <gazebo reference="chassis_link">
    <mu1>0.0001</mu1>
    <mu2>0.0001</mu2>
  </gazebo>

  <!-- link between rear wheels -->
  <link name="diff_link"/>
  <joint name="diff_joint" type="fixed">
    <parent link="base_link"/>
    <child link="diff_link"/>
    <origin xyz="-${track_width} 0 0"/>
  </joint>

  <!-- ===== FRONT LEFT WHEEL ===== -->
  <xacro:wheel
    name="front_left_wheel"
    parent_link="front_left_steering_link"
    wheel_distance="0"
    wheel_orientation="-${pi/2}"
    wheel_radius="${wheel_radius}"
    wheel_length="${wheel_length}"
    wheel_mass="${wheel_mass}"
    max_effort="${max_effort}"
    max_vel="${max_wheel_angular_velocity}"
  />

  <gazebo reference="front_left_wheel_link">
    <mu1>100.0</mu1>
    <mu2>100.0</mu2>
  </gazebo>

  <link name="front_left_steering_link"/>

  <joint name="front_left_steering_joint" type="revolute">
    <parent link="base_link"/>
    <child link="front_left_steering_link"/>
    <origin xyz="0 ${wheel_base/2} 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-${max_steering_angle}" upper="${max_steering_angle}" effort="${max_steering_effort}" velocity="${max_steering_angle_v}"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- ===== FRONT RIGHT WHEEL ===== -->
   <xacro:wheel
    name="front_right_wheel"
    parent_link="front_right_steering_link"
    wheel_distance="0"
    wheel_orientation="${pi/2}"
    wheel_radius="${wheel_radius}"
    wheel_length="${wheel_length}"
    wheel_mass="${wheel_mass}"
    max_effort="${max_effort}"
    max_vel="${max_wheel_angular_velocity}"
  />

  <gazebo reference="front_right_wheel_link">
    <mu1>100.0</mu1>
    <mu2>100.0</mu2>
  </gazebo>

  <link name="front_right_steering_link"/>

  <joint name="front_right_steering_joint" type="revolute">
    <parent link="base_link"/>
    <child link="front_right_steering_link"/>
    <origin xyz="0 -${wheel_base/2} 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-${max_steering_angle}" upper="${max_steering_angle}" effort="${max_steering_effort}" velocity="${max_steering_angle_v}"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- ===== BACK LEFT WHEEL ===== -->
  <xacro:wheel
    name="back_left_wheel"
    parent_link="diff_link"
    wheel_distance="${wheel_base/2}"
    wheel_orientation="-${pi/2}"
    wheel_radius="${wheel_radius}"
    wheel_length="${wheel_length}"
    wheel_mass="${wheel_mass}"
    max_effort="${max_effort}"
    max_vel="${max_wheel_angular_velocity}"
  />

  <gazebo reference="back_left_wheel_link">
    <mu1>100.0</mu1>
    <mu2>100.0</mu2>
  </gazebo>

  <!-- ===== BACK RIGHT WHEEL ===== -->
  <xacro:wheel
    name="back_right_wheel"
    parent_link="diff_link"
    wheel_distance="-${wheel_base/2}"
    wheel_orientation="${pi/2}"
    wheel_radius="${wheel_radius}"
    wheel_length="${wheel_length}"
    wheel_mass="${wheel_mass}"
    max_effort="${max_effort}"
    max_vel="${max_wheel_angular_velocity}"
  />

  <gazebo reference="back_right_wheel_link">
    <mu1>100.0</mu1>
    <mu2>100.0</mu2>
  </gazebo>


</robot>